{
    "compilerOptions": {
        "module": "ES2015",
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "target": "ES2015",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": true,
        "moduleResolution": "node",
        "removeComments": true,
        "sourceMap": true,
        "rootDir": "src",
        "noLib": false,
        "declaration": true,
        "lib": ["dom", "ES2015", "dom.iterable", "scripthost"],
        "outDir": "dist",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "exclude": [
        "dist",
        "node_modules",
        "test",
        "vitest.config.ts",
        "generated"
    ]
}
